{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "User registration request",
  "type": "object",
  "extends" : {
    "type" : "object",
    "javaType" : "com.zooplus.openexchange.protocol.Request"
  },
  "id": "RegistrationRequest",
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    }
  }
}