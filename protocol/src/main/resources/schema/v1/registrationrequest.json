{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "User registration request",
  "type": "object",
  "id": "RegistrationRequest",
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    }
  }
}